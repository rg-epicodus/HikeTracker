{{#partial "content"}}

    {{#if editHike}}
        <h1>Edit this Hike</h1>

        <form action="/hikes/{{editHike.id}}/update" method="post">
            <div class="form-group">
                <label for="hikeName">Edit this hikes's name</label>
                <input id="hikeName" name="hikeName" type="text" value="{{editHike.hikeName}}" required>
            </div>
            <div class="form-group">
                <label for="hikeLocation">Edit Hike Location: </label>
                <select name="hikeLocation" id="hikeLocation">
                    {{#each availableLocations}}
                        <option value="{{locationState}}">{{locationState}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="hikeNotes">Edit Hike Notes: </label>
                <input id="hikeNotes" name="hikeNotes" type="text" value="{{editHike.hikeNotes}}" required>
            </div>
            <div class="form-group">
                <label for="hikeRating">Edit Hike Rating: </label>
                <input id="hikeRating" name="hikeRating" type="text" value="{{editHike.hikeRating}}" required>
            </div>
            <button type="submit" class="btn btn-default">Complete Edit</button>
        </form>



    {{else}}

        <div class="row">
            <div class="col-md-6">
                <h1>Add a new Hike!</h1>
                <form action="/hikes/new" method="post">
                    <div class="form-group">
                        <label for="hikeName">Hike Name: </label>
                        <input id="hikeName" name="hikeName" type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="hikeLocation">Hike Location: </label>
                        <select name="hikeLocation" id="hikeLocation">
                            {{#each availableLocations}}
                                <option value="{{locationState}}">{{locationState}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="hikeNotes">Hike Notes: </label>
                        <input id="hikeNotes" name="hikeNotes" type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="hikeRating">Hike Rating: </label>
                        <input id="hikeRating" name="hikeRating" type="text" required>
                    </div>


                    <button type="submit" class="btn btn-default">Go!</button>
                </form>
            </div>
        </div>

    {{/if}}

{{/partial}}

{{> layout.hbs}}