{{#partial "content"}}


    {{#if hikes}}
        <h1>List of Hikes</h1>
        <ul>
            {{#each hikes}}
                <li>{{newHike}}</li>
            {{/each}}
        </ul>
    {{else}}
        <p>No Hikes yet, please add one.</p>
        <a href="/hikes/new"><button type="button" class="btn btn-default">Enter a Hike</button></a>
    {{/if}}


{{/partial}}

{{> layout.hbs}}